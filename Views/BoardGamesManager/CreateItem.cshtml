@model BoardGamesManager.Models.BoardGameViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateItem"enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Upload image file</label>
                <input asp-for="Image" accept="image/*" required/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" required/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameDuration" class="control-label"></label>
                <input asp-for="GameDuration" class="form-control" required/>
                <span asp-validation-for="GameDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecomendedAge" class="control-label"></label>
                <input asp-for="RecomendedAge" class="form-control" required/>
                <span asp-validation-for="RecomendedAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPlayers" class="control-label"></label>
                <input asp-for="NumberOfPlayers" class="form-control" required/>
                <span asp-validation-for="NumberOfPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" required/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkToStore" class="control-label"></label>
                <input asp-for="LinkToStore" class="form-control" required/>
                <span asp-validation-for="LinkToStore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BoardGames">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
