    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <img src="@Model.ImagePath" asp-append-version="true" />
            </div>
            <div class="col-sm">
                <br />
                <br />
                <br />
                <br />
                <b>@Html.DisplayNameFor(model => model.GameDuration):</b>
                @Html.DisplayFor(model => model.GameDuration)
                <br />
                <br />
                <b>@Html.DisplayNameFor(model => model.RecomendedAge):</b>
                @Html.DisplayFor(model => model.RecomendedAge)
                <br />
                <br />
                <b>@Html.DisplayNameFor(model => model.NumberOfPlayers):</b>
                @Html.DisplayFor(model => model.NumberOfPlayers)
                <br />
                <br />
                <b>@Html.DisplayNameFor(model => model.Price):</b>
                @Html.DisplayFor(model => model.Price) UAH
                <br />
                <br />
                <b>@Html.DisplayNameFor(model => model.LinkToStore):</b>
                <a href="@Html.DisplayFor(model => model.LinkToStore)" target="_blank">Buy</a>
            </div>
            <div class="col-sm">
                <br />
                <br />
                <br />
                <b>@Html.DisplayNameFor(model => model.Description):</b>
                <br />
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>
    </div>
    
    <form asp-action="DeleteItem">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="BoardGames">Back to List</a>
    </form>
