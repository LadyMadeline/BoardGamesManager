@model IEnumerable<BoardGamesManager.Models.BoardGameViewModel>

@{
    ViewData["Title"] = "BoardGames";
}

@{Layout = "_Layout";}

<h1>Board games</h1>

<p>
    <a asp-action="CreateItem">Create New</a> | 
    <a asp-action="BoardGames">Back to list</a>
</p>
<div class="col-md-5">
    <form asp-controller="BoardGamesManager" asp-action="BoardGames" method="get">
        <div class="input-group-append">
            <input placeholder="Title" type="text" name="SearchString" class="form-control" />
            <select name="Sort">
                <option value="Default" selected>Sort:</option>
                <option value="PriceAsc">Ascending price</option>
                <option value="PriceDesc">Descending price</option>
            </select>
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
</div>
<br />
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th style="width: 15%">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th style="width: 10%">
                @Html.DisplayNameFor(model => model.GameDuration)
            </th>
            <th style="width: 10%">
                @Html.DisplayNameFor(model => model.RecomendedAge)
            </th>
            <th style="width: 10%">
                @Html.DisplayNameFor(model => model.NumberOfPlayers)
            </th>
            <th style="width: 10%">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th style="width: 10%">
                @Html.DisplayNameFor(model => model.LinkToStore)
            </th>
            <th style="width: 16%">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImagePath" asp-append-version="true" width="100" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameDuration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecomendedAge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfPlayers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price) UAH
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.LinkToStore)" target="_blank">Buy</a>
                </td>
                <td>
                    <a asp-action="EditItem" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DetailsItem" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="DeleteItemPage" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
