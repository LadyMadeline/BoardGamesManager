@model BoardGamesManager.Models.BoardGameViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditItem" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Upload image file</label>
                <input asp-for="Image" accept="image/*"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" value="@ViewBag.EditedBoardGame.Title" class="form-control" required/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameDuration" class="control-label"></label>
                <input asp-for="GameDuration" value="@ViewBag.EditedBoardGame.GameDuration" class="form-control" required/>
                <span asp-validation-for="GameDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecomendedAge" class="control-label"></label>
                <input asp-for="RecomendedAge" value="@ViewBag.EditedBoardGame.RecomendedAge" class="form-control" required/>
                <span asp-validation-for="RecomendedAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPlayers" class="control-label"></label>
                <input asp-for="NumberOfPlayers" value="@ViewBag.EditedBoardGame.NumberOfPlayers" class="form-control" required/>
                <span asp-validation-for="NumberOfPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" value="@ViewBag.EditedBoardGame.Price" class="form-control" required/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea name="Description" class="form-control" required>@ViewBag.EditedBoardGame.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkToStore" class="control-label"></label>
                <input asp-for="LinkToStore" value="@ViewBag.EditedBoardGame.LinkToStore" class="form-control" required/>
                <span asp-validation-for="LinkToStore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BoardGames">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
